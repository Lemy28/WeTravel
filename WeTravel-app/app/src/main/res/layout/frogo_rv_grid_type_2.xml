<?xml version="1.0" encoding="utf-8"?>


<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/frogo_rv_grid_type_2_root_linear_layout"
    style="@style/FrogoLayoutGrid8dp"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/iv_house_image"
        android:layout_width="match_parent"
        android:layout_height="@dimen/frogo_dimen_150dp"
        android:layout_marginBottom="8dp"
        android:contentDescription="@string/frogo_dummy_content_description"
        android:scaleType="centerCrop"
        tools:src="@tools:sample/avatars" />

    <TextView
        android:id="@+id/tv_house_name"
        style="@style/frogoTvListTitle"
        tools:text="@tools:sample/lorem/random" />

    <TextView
        android:id="@+id/tv_house_address"
        style="@style/FrogoTvListSubTitle"
        tools:text="@tools:sample/lorem/random" />
    <TextView
        android:id="@+id/tv_house_price"
        style="@style/FrogoTvListSubTitle"
        tools:text="@tools:sample/lorem/random" />

</LinearLayout>